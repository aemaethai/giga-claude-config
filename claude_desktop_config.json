{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{{github-apikey}}"
      }
    },
    "slack": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "SLACK_BOT_TOKEN",
        "-e",
        "SLACK_TEAM_ID",
        "mcp/slack"
      ],
      "env": {
        "SLACK_BOT_TOKEN": "{{xoxb-apikey}}",
        "SLACK_TEAM_ID": "{{T01234567}}"
      }
    },
    "okta": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "OKTA_ORG_URL",
        "-e",
        "OKTA_API_TOKEN",
        "okta-mcp-server"
      ],
      "env": {
        "OKTA_ORG_URL": "{{https://hostname.okta.com}}",
        "OKTA_API_TOKEN": "{{okta-apikey}}"
      }
    },
    "google": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GOOGLE_TOKEN_JSON",
        "google-admin-mcp"
      ],
      "env": {
        "GOOGLE_TOKEN_JSON": "{{google-admin-token}}"
      }
    }
  }
}
